<header>
  <nav class="navbar navbar-expand-lg bg-black bg-opacity-50 border-bottom shadow">
    <div class="container">
      <a href="/" class="navbar-brand link-primary d-flex ms-2">IN√çCIO</a>
      <button
        class="navbar-toggler btn btn-dark"
        style="box-shadow: none"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <form
          class="d-flex gap-2 d-flex ms-auto"
          id="form-search"
          role="search"
          method="get"
          action="/meteorology"
        >
          <input class="form-control" type="date" name="date" id="date" required />
          <select name="capital" id="capital" class="form-select" required>
            <option value="" data-default selected>Selecionar Capital</option>
            <% METEOROLOGIES.map(meteorology=> { %>
            <option value="<%= meteorology.capital %>" class="option-capital">
              <%= meteorology.capital %>
            </option>
            <% }); %>
          </select>
          <button
            title="Buscar"
            class="btn btn-outline-primary d-flex align-items-center"
            type="submit"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-search"
              viewBox="0 0 16 16"
            >
              <path
                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 
                  1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"
              />
            </svg>
          </button>
        </form>
      </div>
    </div>
  </nav>
</header>
